<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.eigenein.nexttrainwear.StationsFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal"
            android:background="@color/blue_lighter_element"
            android:gravity="center">

            <android.support.wearable.view.CircularButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_search_white_24dp"
                android:color="@color/blue_active_element"
                app:buttonRippleColor="@color/ripple" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</FrameLayout>
